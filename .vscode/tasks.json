{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				{
					"base": "$tsc",
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^vite v.* building",
						"endsPattern": "built in \\d+ms\\.|âœ“ built in \\d+ms"
					}
				}
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
