{
  "name": "kiro-constellation",
  "displayName": "Kiro Constellation",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kiro-constellation.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "kiro-constellation.showMap",
        "title": "Kiro Constellation: Show Architecture Map"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiro-constellation-sidebar",
          "title": "Kiro Constellation",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kiro-constellation-sidebar": [
        {
          "id": "kiro-constellation.mapView",
          "name": "Architecture Map",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "vite build",
    "watch": "vite build --watch",
    "package": "vite build --mode production",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/ui": "^3.2.4",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dependency-cruiser": "^17.0.1"
  }
}
