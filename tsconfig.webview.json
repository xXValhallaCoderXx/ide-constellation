{
  "compilerOptions": {
    "target": "ES2020",
    "module": "None",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/src/ui",
    "rootDir": "./src/ui",
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": [
    "src/ui/webview/webview.ts",
    "src/ui/sidebar/sidebar.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/ui/webview/WebviewManager.ts",
    "src/ui/sidebar/SidebarProvider.ts"
  ]
}